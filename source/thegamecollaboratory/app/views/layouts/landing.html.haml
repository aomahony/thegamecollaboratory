!!! 5
%html
%head
   %title The Game Collaboratory
   = stylesheet_link_tag    "application", media: "all"
   = javascript_include_tag "application"
   = csrf_meta_tags

%body
   = yield

   .login-links
      - if user_signed_in?
         %p
            ="Logged in as #{current_user.full_name}" 
            &nbsp;
            - if current_user.is_admin?
               =link_to 'Admin Page', rails_admin.dashboard_path
            &nbsp;
            =link_to 'Admin Logout', destroy_user_session_path, :method => :delete
      - else
         %p= link_to 'Admin Login', new_user_session_path
